<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://code.alibabatech.com/schema/dubbo
          http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

  <dubbo:application name="weixin-service-rabbitmq"/>

  <dubbo:registry id="zk1" address="${smarthome.dubbo.reistry.address}" protocol="${smarthome.dubbo.reistry.protocol}"/> <!-- 注意要关闭防火墙 -->

  <dubbo:protocol id="mydubbo" name="dubbo" host="${smarthome.dubbo.host.address}" port="${smarthome.dubbo.rabbitmq.service.port}"/>

  <dubbo:provider registry="zk1" protocol="mydubbo"/>


  <dubbo:service interface="com.igood.smarthome.rpc.rabbitmq.service.RpcRabbitSmsService"
                 ref="rabbitSmsService" version="1.0"/>

</beans>
