<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://code.alibabatech.com/schema/dubbo
          http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="weixin-service-message"/>

    <dubbo:registry id="zk1" address="${weixin.dubbo.reistry.address}" protocol="${weixin.dubbo.reistry.protocol}"/> <!-- 注意要关闭防火墙 -->

    <dubbo:protocol id="mydubbo" name="dubbo" host="${weixin.dubbo.host.address}" port="${weixin.dubbo.message.service.port}"/>

    <dubbo:provider registry="zk1" protocol="mydubbo"/>

    <dubbo:service interface="com.igood.smarthome.rpc.message.service.RpcSmsService" ref="smsService" version="1.0"/>

</beans>
